<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="1" author="subash">
        <createTable tableName="emi">
            <column name="loan_id" type="INT" autoIncrement="true"/>
            <column name="accno" type="VARCHAR(100)" />
            <column name="loan_amount" type="DECIMAL(15,2)" />
            <column name="years" type="DECIMAL(15,2)" />
            <column name="rate" type="DECIMAL(15,2)" />
        </createTable>

            <addForeignKeyConstraint
                    baseTableName="emi"
                    baseColumnNames="loan_id"
                    referencedTableName="bankingapplication"
                    referencedColumnNames="accno"
                    constraintName="fk_emi_bankingapplication"/>
        </changeSet>


</databaseChangeLog>